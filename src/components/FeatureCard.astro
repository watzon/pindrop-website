---
import GlassCard from './GlassCard.astro';
import Icon from './Icon.astro';

interface Props {
  title: string;
  description: string;
  icon: string;
  class?: string;
}

const { title, description, icon, class: className = '' } = Astro.props;
---

<GlassCard class={`flex flex-col h-full ${className}`}>
  <div class="mb-4 text-brand-orange p-3 bg-white/5 rounded-xl w-fit">
    <Icon name={icon as any} size={28} />
  </div>
  <h3 class="text-xl font-display font-bold text-white mb-2">{title}</h3>
  <p class="text-text-secondary leading-relaxed">{description}</p>
</GlassCard>
